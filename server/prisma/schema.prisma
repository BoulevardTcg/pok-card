// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Connection pooling recommandé pour la production
  // Utiliser une URL avec ?pgbouncer=true pour PgBouncer
  // ou ?connection_limit=10 pour limiter les connexions
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  username   String   @unique
  password   String
  firstName  String?
  lastName   String?
  avatar     String?
  bio        String?
  isAdmin    Boolean  @default(false)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // 2FA (Two-Factor Authentication)
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String? // Secret TOTP encodé

  // RGPD - Consentements
  marketingConsent     Boolean   @default(false) // Consentement emails marketing
  marketingConsentAt   DateTime? // Date du consentement marketing
  analyticsConsent     Boolean   @default(false) // Consentement analytics/cookies
  analyticsConsentAt   DateTime? // Date du consentement analytics
  privacyPolicyVersion String? // Version de la politique de confidentialité acceptée
  privacyAcceptedAt    DateTime? // Date d'acceptation de la politique

  // RGPD - Suppression de compte
  deletionRequestedAt DateTime? // Date de demande de suppression
  deletionScheduledAt DateTime? // Date de suppression programmée (ex: +30 jours)

  // Relations
  profile             UserProfile?
  favorites           Favorite[]
  orders              Order[]
  tradeOffers         TradeOffer[]         @relation("TradeOfferCreator")
  tradeOffersReceived TradeOffer[]         @relation("TradeOfferReceiver")
  contestTickets      ContestTicket[]
  refreshTokens       RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  reviews             ProductReview[]
  collection          UserCollection[]

  @@map("users")
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  phone       String?
  address     String?
  city        String?
  postalCode  String?
  country     String?
  birthDate   DateTime?
  preferences Json? // Préférences utilisateur (thème, notifications, etc.)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  cardName  String
  cardImage String
  cardSet   String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@map("favorites")
}

model Order {
  id                String            @id @default(cuid())
  userId            String?
  orderNumber       String            @unique
  status            OrderStatus       @default(PENDING)
  fulfillmentStatus FulfillmentStatus @default(PAID)
  carrier           Carrier?
  trackingNumber    String?
  trackingUrl       String?
  shippedAt         DateTime?
  deliveredAt       DateTime?
  totalCents        Int
  currency          String            @default("EUR")
  paymentMethod     String?
  shippingMethod    String?
  shippingCost      Int?
  shippingAddress   Json?
  billingAddress    Json?
  items             OrderItem[]
  events            OrderEvent[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("orders")
}

model OrderEvent {
  id        String         @id @default(cuid())
  orderId   String
  type      OrderEventType
  message   String?
  createdBy String?
  createdAt DateTime       @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId, createdAt])
  @@map("order_events")
}

model OrderItem {
  id               String   @id @default(cuid())
  orderId          String
  productId        String
  productVariantId String
  productName      String
  variantName      String?
  imageUrl         String?
  quantity         Int
  unitPriceCents   Int
  totalPriceCents  Int
  createdAt        DateTime @default(now())

  // Relations
  order   Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Product {
  id          String           @id @default(cuid())
  name        String
  slug        String           @unique
  description String?
  category    String
  images      ProductImage[]
  variants    ProductVariant[]
  reviews     ProductReview[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([category])
  @@map("products")
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String
  altText   String?
  position  Int      @default(0)
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, position])
  @@map("product_images")
}

model ProductVariant {
  id            String   @id @default(cuid())
  productId     String
  name          String
  language      String?
  edition       String?
  priceCents    Int
  stock         Int      @default(0)
  sku           String?
  stripePriceId String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product          Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems       OrderItem[]
  cartReservations CartReservation[]

  @@index([productId])
  @@map("product_variants")
}

model TradeOffer {
  id            String      @id @default(cuid())
  creatorId     String
  receiverId    String
  status        TradeStatus @default(PENDING)
  creatorCards  Json // Cartes proposées par le créateur
  receiverCards Json // Cartes demandées au receveur
  message       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  creator  User @relation("TradeOfferCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  receiver User @relation("TradeOfferReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@map("trade_offers")
}

model ContestTicket {
  id        String   @id @default(cuid())
  userId    String
  contestId String
  entry     String // Réponse au concours
  score     Int?
  isWinner  Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contestId])
  @@map("contest_tickets")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime? // Null si pas encore utilisé
  createdAt DateTime  @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

model ProductReview {
  id         String   @id @default(cuid())
  productId  String
  userId     String
  rating     Int // 1-5
  title      String?
  comment    String?
  isVerified Boolean  @default(false) // Achat vérifié
  isApproved Boolean  @default(false) // Modération
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId]) // Un utilisateur ne peut laisser qu'un avis par produit
  @@index([productId])
  @@index([userId])
  @@map("product_reviews")
}

model PromoCode {
  id          String    @id @default(cuid())
  code        String    @unique
  type        PromoType // PERCENTAGE ou FIXED
  value       Int // Pourcentage (0-100) ou montant fixe en centimes
  minPurchase Int? // Montant minimum d'achat en centimes
  maxDiscount Int? // Réduction maximale en centimes
  usageLimit  Int? // Nombre d'utilisations maximum
  usedCount   Int       @default(0)
  validFrom   DateTime
  validUntil  DateTime
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([code])
  @@map("promo_codes")
}

model UserCollection {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  cardName  String
  cardImage String?
  cardSet   String?
  quantity  Int      @default(1)
  condition String? // Neuf, Excellent, etc.
  language  String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([userId])
  @@map("user_collections")
}

model StockNotification {
  id         String    @id @default(cuid())
  email      String
  productId  String
  variantId  String?
  notified   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  notifiedAt DateTime?

  @@unique([email, productId, variantId])
  @@index([productId])
  @@index([email])
  @@map("stock_notifications")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum FulfillmentStatus {
  PENDING
  PAID
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum Carrier {
  COLISSIMO
  MONDIAL_RELAY
  CHRONOPOST
  UPS
  DHL
  FEDEX
  OTHER
}

enum OrderEventType {
  CREATED
  PAID
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  NOTE
  STATUS_UPDATED
}

enum TradeStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
  COMPLETED
}

enum PromoType {
  PERCENTAGE
  FIXED
}

model CartReservation {
  id        String   @id @default(cuid())
  variantId String
  ownerKey  String // Format: "user:abc123" ou "cart:xyz789"
  quantity  Int      @default(1)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  variant ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([variantId, ownerKey])
  @@index([variantId])
  @@index([ownerKey])
  @@index([expiresAt])
  @@map("cart_reservations")
}
